@model IEnumerable<Jiji.Models.Producto>
@using Jiji.Helpers

@{
    ViewData["Title"] = "Detalles de los Productos";
}

<h1>Detalles de los Productos</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.First().Idorden)</th>
                <th>@Html.DisplayNameFor(model => model.First().Idcategoria)</th>
                <th>@Html.DisplayNameFor(model => model.First().Idempresa)</th>
                <th>@Html.DisplayNameFor(model => model.First().Valor)</th>
                <th>@Html.DisplayNameFor(model => model.First().CreatedAt)</th>
                <th>@Html.DisplayNameFor(model => model.First().UpdatedAt)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => producto.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Idorden)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Idcategoria)</td>
                    <td>@Html.DisplayFor(modelItem => producto.Idempresa)</td>
                    <td>
                        @Html.DisplayCurrency(producto.Valor, "es-CO")
                        @Html.DisplayCurrency(producto.Valor, "en-US")
                        @Html.DisplayCurrency(producto.Valor, "fr-FR")
                        @Html.DisplayCurrency(producto.Valor, "ja-JP")
                    </td>
                    <td>@Html.DisplayFor(modelItem => producto.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => producto.UpdatedAt)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se encontraron productos.</p>
}

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
